{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "outDir": "./build/"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./build/**/*"
    ]
}